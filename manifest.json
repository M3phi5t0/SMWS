{
  "manifest_version": 2,
  "name": "Malt Decoder",
  "version": "0.0.1",
  "description": "Decode Whisky names on SMWS (Single Malt Whisky Society) pages",
  "homepage_url": "https://github.com/elliottback/MaltDecoder",

  // For a list of possibilities, see https://developer.chrome.com/extensions/declare_permissions
  "permissions": [
    "http://*.smwsjapan.com/*",
    "https://*.smwsjapan.com/*",
    "http://*.smws.com/*",
    "https://*.smws.com/*",
    "http://*.smwsa.com/*",
    "https://*.smwsa.com/*"
  ],

  "browser_action": {
    "default_title": "Malt Decoder"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*.smwsjapan.com/*",
        "https://*.smwsjapan.com/*",
        "http://*.smws.com/*",
        "https://*.smws.com/*",
        "http://*.smwsa.com/*",
        "https://*.smwsa.com/*"
      ],
      "js": [
        "/src/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "data/data.json"
  ]
}